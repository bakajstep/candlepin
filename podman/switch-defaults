#!/bin/bash

DIR="$(git rev-parse --show-toplevel)/docker/"

usage() {
  cat << USAGE

USAGE: switch_defaults [OPTIONS]

OPTIONS:
  -m        use mysql
  -p        use postgres

USAGE
}

switcher() {
  echo "Setting default to: $1"
  cd $DIR
  ln --force -s podman-compose-$1.yml podman-compose.yml
  cd - >/dev/null 2>&1
  exit 0
}

while getopts ":mop" opt; do
  case $opt in
    m) switcher 'mysql';;
    p) switcher 'postgres';;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      usage
      exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument." >&2
      usage
      exit 1
      ;;
    *)
      echo "Must provide one of arg -m or -p" >&2
      usage
      exit 1
  esac
done

echo "Must provide one of arg -m or -p" >&2

usage
exit 1
